{
	"name": "beacon",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "pnpm run minify-beacons && vite build",
		"deploy": "vite build && wrangler deploy",
		"dev": "vite",
		"preview": "vite preview",
		"minify-beacons": "terser public/beacon.js -o public/beacon.min.js && terser public/exp-beacon.js -o public/exp-beacon.min.js",
		"db:apply": "wrangler d1 execute analytics-database --file=./src/database/schema.sql"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.13.2",
		"@cloudflare/workers-types": "^4.20250913.0",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.2",
		"terser": "^5.44.0",
		"typescript": "^5.9.2",
		"vite": "^7.1.5",
		"wrangler": "^4.37.1"
	},
	"dependencies": {
		"hono": "^4.9.7",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-markdown": "^10.1.0",
		"react-router": "^7.9.1",
		"react-router-dom": "^7.9.1",
		"remark-gfm": "^4.0.1"
	}
}
